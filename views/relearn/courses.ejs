<% layout('layouts/boilerplate') %>
    <section id="hero" class="hero d-flex align-items-center">
        <div class="container-fluid" id="hero-content">
            <div class="row">
                <div class="hero-heading col-lg-6 col-md-6 d-flex flex-column justify-content-center" id="hero-heading">
                    <h1>
                        We offer modern solutions for easy study
                    </h1>
                    <h2>
                        We provide the best possible study content
                    </h2>
                    <div class="hero-btn">
                        <a class="btn btn-primary px-4" href="/relearn/about" role="button">Learn more</a>
                    </div>
                </div>
                <div class="hero-img col-lg-6">
                    <img src="/images/hero-img.png" class="img-fluid updown-animation" alt="hero-img">
                </div>
            </div>
        </div>
    </section>
    <section class="courses">
        <div class="container">
            <div class="row gy-4" data-aos="fade-right">
                <div class="col-lg-12 about-heading d-flex justify-content-center mb-5">
                    <h1>COURSES:</h1>
                </div>
                <% if (courses) { %>
                    <% for( let course of courses ) { %>
                        <div class="col-lg-4 col-md-6 mt-4">
                            <div class="service-box" id="purple">
                                <img src="<%= course.courseImage.url %> " class="img-fluid mb-5" alt="course-img"
                                    id="course-img-6">
                                <h3>
                                    <%= course.courseTitle %>
                                </h3>
                                <p>
                                    <%= course.courseDescription %>
                                </p>
                                <div class="hero-btn">
                                    <a class="btn btn-primary px-4" href="/relearn/videos/<%= course._id %>"
                                        role="button">Learn
                                        more</a>
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <% } else {%>
                                <div class="col-lg-12">
                                    <h2 class="text-center fw-bolder">No Courses To Show</h2>
                                </div>
                                <% } %>

            </div>
        </div>
    </section>