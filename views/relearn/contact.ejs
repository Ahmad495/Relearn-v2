<% layout('layouts/boilerplate') %>
    <section id="hero" class="hero d-flex align-items-center">
        <div class="container-fluid" id="hero-content">
            <div class="row">
                <div class="hero-heading col-lg-6 col-md-6 d-flex flex-column justify-content-center" id="hero-heading">
                    <h1>
                        We offer modern solutions for easy study
                    </h1>
                    <h2>
                        We provide the best possible study content
                    </h2>
                    <div class="hero-btn">
                        <a class="btn btn-primary px-4" href="/relearn/about" role="button">Learn more</a>
                    </div>
                </div>
                <div class="hero-img col-lg-6">
                    <img src="/images/hero-img.png" class="img-fluid updown-animation" alt="hero-img">
                </div>
            </div>
        </div>
    </section>
    <section class="contact-form" id="contact-form">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-12 about-heading d-flex justify-content-center mb-5">
                    <h1>CONTACT US:</h1>
                </div>
                <div class="col-lg-6">

                    <div class="row gy-4 gx-4">
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="fas fa-map-marker-alt fa-2x"></i>
                                <h3 class="fw-bolder">Address</h3>
                                <p class="fw-bolder">ABC xyz Street XABC Country</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="fas fa-phone-alt fa-2x"></i>
                                <h3 class="fw-bolder">Call Us</h3>
                                <p class="fw-bolder">+1 5589 55488 55<br>+1 6678 254445 41</p>
                            </div>
                        </div>
                        <div class="col-md-6 pt-3">
                            <div class="info-box">
                                <i class="fas fa-envelope fa-2x"></i>
                                <h3 class="fw-bolder">Email Us</h3>
                                <p class="fw-bolder">info@example.com<br>contact@example.com</p>
                            </div>
                        </div>
                        <div class="col-md-6 pt-3">
                            <div class="info-box">
                                <i class="far fa-clock fa-2x"></i>
                                <h3 class="fw-bolder">Open Hours</h3>
                                <p class="fw-bolder">Monday - Friday<br>9:00AM - 05:00PM</p>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-lg-6">
                    <form action="#" class="php-email-form">
                        <div class="row">

                            <div class="col-md-6 py-2">
                                <input type="text" name="name" class="form-control" placeholder="Your Name" required>
                            </div>

                            <div class="col-md-6 py-2">
                                <input type="email" class="form-control" name="email" placeholder="Your Email" required>
                            </div>

                            <div class="col-md-12 py-2">
                                <input type="text" class="form-control" name="subject" placeholder="Subject" required>
                            </div>

                            <div class="col-md-12 py-2">
                                <textarea class="form-control" name="message" rows="6" placeholder="Message"
                                    required></textarea>
                                <div class="contact-btn pt-4 text-center d-grid gap-2">
                                    <button class="btn btn-primary text-uppercase px-4 fw-bolder">Send</button>
                                </div>
                            </div>


                        </div>
                    </form>

                </div>

            </div>
        </div>
    </section>