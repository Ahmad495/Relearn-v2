<% layout('layouts/dashboardBoilerplate') %>
    <div id="layoutSidenav">
        <%- include('../partials/sidebar') %>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Add Videos</h1>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active">
                                <i class="fas fa-file"></i>
                                Add Videos
                            </li>
                        </ol>
                        <div class="row">
                            <div class="col-xl-4 col-md-6">
                                <div class="card bg-primary text-white mb-4">
                                    <div class="card-body">
                                        <i class="fas fa-comments fa-5x"></i> Chat Rooms <span
                                            class="badge bg-secondary bg-dark"></span>
                                    </div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <a class="small text-white stretched-link" href="#">View Details</a>
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4 col-md-6">
                                <div class="card bg-warning text-white mb-4">
                                    <div class="card-body"><i class="fas fa-copy fa-5x"></i> Add Courses </div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <a class="small text-white stretched-link" href="#">View Details</a>
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4 col-md-6">
                                <div class="card bg-danger text-white mb-4">
                                    <div class="card-body"><i class="fas fa-photo-video fa-5x"></i> Add Videos </div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <a class="small text-white stretched-link" href="#">View Details</a>
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-lg-12">
                                    <form action="/dashboard/addVideos" method="post" enctype="multipart/form-data"
                                        class="needs-validation addCourse my-5" novalidate>
                                        <h2 class="text-center fw-bolder mb-5">Video Info</h2>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="courseTitle" class="form-label fw-bolder">videos
                                                    Title</label>
                                                <input type="text" class="form-control" name="videos[videosTitle]"
                                                    id="videosTitle" placeholder="videos Title" required>
                                                <div class="valid-feedback">
                                                    Looks good!
                                                </div>
                                                <div class="invalid-feedback">
                                                    Please enter a videos title.
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="videosFile" class="form-label fw-bolder">videos
                                                    File</label>
                                                <input type="file" class="form-control" name="videos[videoFile]"
                                                    id="videosFile" placeholder="videos File" required>
                                                <div class="valid-feedback">
                                                    Looks good!
                                                </div>
                                                <div class="invalid-feedback">
                                                    Please enter a videos File.
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <label for="courseTitle" class="form-label fw-bolder">Choose
                                                    Course</label>
                                                <select class="form-select" name="videos[courseId]" id="courseTitle">
                                                    <% for( let course of courses ) { %>
                                                        <option value="<%= course._id %>">
                                                            <%= course.courseTitle %>
                                                        </option>
                                                        <% } %>
                                                </select>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <label for="videosDescription"
                                                    class="form-label fw-bolder">Description</label>
                                                <textarea class="form-control" name="videos[videosDescription]"
                                                    placeholder="Leave a Description here" id="videosDescription"
                                                    style="height: 100px" required></textarea>
                                                <div class="valid-feedback">
                                                    Looks good!
                                                </div>
                                                <div class="invalid-feedback">
                                                    Please enter a videos description.
                                                </div>
                                            </div>
                                            <div class="d-grid mb-3">
                                                <button class="btn btn-primary btn-login fw-bold text-uppercase"
                                                    type="submit">Submit</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Your Website 2021</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
    </div>