<% layout('layouts/dashboardBoilerplate') %>
    <div id="layoutSidenav">
        <%- include('../partials/sidebar') %>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Dashboard</h1>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active">
                                <i class="fas fa-tachometer-alt"></i>
                                Dashboard
                            </li>
                        </ol>
                        <div class="row">
                            <div class="col-xl-4 col-md-6">
                                <div class="card bg-primary text-white mb-4">
                                    <div class="card-body">
                                        <i class="fas fa-comments fa-5x"></i> Chat Rooms <span
                                            class="badge bg-secondary bg-dark"></span>
                                    </div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <a class="small text-white stretched-link" href="#">View Details</a>
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4 col-md-6">
                                <div class="card bg-warning text-white mb-4">
                                    <div class="card-body"><i class="fas fa-copy fa-5x"></i> Add Courses </div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <a class="small text-white stretched-link" href="/dashboard/addCourses">View
                                            Details</a>
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4 col-md-6">
                                <div class="card bg-danger text-white mb-4">
                                    <div class="card-body"><i class="fas fa-photo-video fa-5x"></i> Add Videos </div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <a class="small text-white stretched-link" href="/dashboard/addVideos">View
                                            Details</a>
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-lg-12">
                                <h1 class="text-start">Courses</h1>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered">
                                        <thead class="table-dark">
                                            <tr>
                                                <th class="text-center fw-bolder">Course Title</th>
                                                <th class="text-center fw-bolder">Course Description</th>
                                                <th class="text-center fw-bolder">Course Image</th>
                                                <th class="text-center fw-bolder">Edit Course</th>
                                                <th class="text-center fw-bolder">Delete Course</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for( let course of courses ) { %>
                                                <tr>
                                                    <td>
                                                        <%= course.courseTitle %>
                                                    </td>
                                                    <td>
                                                        <%= course.courseDescription %>
                                                    </td>
                                                    <td>
                                                        <%= course.courseImage.filename %>
                                                    </td>
                                                    <td>
                                                        <center><a href="/dashboard/courses/<%= course._id%>/edit"
                                                                class="btn btn-sm btn-primary" type="button">Edit</a>
                                                        </center>
                                                    </td>
                                                    <td>
                                                        <form
                                                            action="/dashboard/courses/<%= course._id %>?_method=DELETE"
                                                            method="post">
                                                            <center>
                                                                <button class="btn btn-sm btn-danger">Delete</button>
                                                            </center>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <h1 class="text-start">Videos</h1>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered">
                                        <thead class="table-dark">
                                            <tr>
                                                <th class="text-center fw-bolder">Videos Title</th>
                                                <th class="text-center fw-bolder">Videos Description</th>
                                                <th class="text-center fw-bolder">Videos File</th>
                                                <th class="text-center fw-bolder">Edit Videos</th>
                                                <th class="text-center fw-bolder">Delete Videos</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for( let video of videos ) { %>
                                                <tr>
                                                    <td>
                                                        <%= video.videoTitle %>
                                                    </td>
                                                    <td>
                                                        <%= video.videoDescription %>
                                                    </td>
                                                    <td>
                                                        <%= video.videoFile.filename %>
                                                    </td>
                                                    <td>
                                                        <center><a href="#" class="btn btn-sm btn-primary"
                                                                type="button">Edit</a>
                                                        </center>
                                                    </td>
                                                    <td>
                                                        <form action="/dashboard/video/<%= video._id %>?_method=DELETE"
                                                            method="post">
                                                            <center>
                                                                <button class="btn btn-sm btn-danger">Delete</button>
                                                            </center>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Your Website 2021</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
    </div>